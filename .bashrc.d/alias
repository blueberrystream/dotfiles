alias lld='ll | grep ^d'
alias lll='ll | grep ^l'
alias llf='ll | grep ^-'
alias llgrep='ll | grep'
alias llless='ll | less'

alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias ln='ln -v'
#alias chmod='chmod --preserve-root'
#alias chown='chown --preserve-root'

alias cd='cdls'
alias cd..='cd ..'

alias vim=nvim
alias vi=nvim
alias view='nvim -R'

alias psgrep='ps aux | grep'

alias reload-bash='source $HOME/.bash_profile'

alias tmux-a='tmux a; if [ $? -eq 1 ]; then tmux -2; fi'

alias eman='env LANG=C man'

alias ag-pager='ag --pager=less'

alias pt='pt -S --home-ptignore --hidden --follow'

alias low-priority='ionice -c 2 -n 7 nice -n 19'

alias mysqldump-hacci='mysqldump --extended-insert --single-transaction --quote-names --flush-logs --order-by-primary'

alias crontab='crontab -i'

alias fig='docker-compose'
alias fig-logs='fig logs -f -t --tail=10 --no-log-prefix'

alias vim-ssh-config='vim ~/.ssh/config'
