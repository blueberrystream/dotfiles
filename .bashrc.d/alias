alias ls='ls --color=auto'
alias ll='ls -lAp --color=auto --group-directories-first'
alias lld='ll | grep ^d'
alias lll='ll | grep ^l'
alias llf='ll | grep ^-'
alias llgrep='ll | grep'
alias llless='ll | less'

alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'

alias cd='cdls'
alias cd..='cd ..'

alias vim='vim -p'
alias vi=vim
alias view='vim -R'

alias psgrep='ps aux | grep'

alias reload-bash='source $HOME/.bash_profile'

alias tmux-a='tmux a; if [ $? -eq 1 ]; then tmux -2; fi'

alias eman='env LANG=C man'

alias ag-pager='ag --pager="less -R"'

alias pt='pt -S --home-ptignore'

alias low-priority='ionice -c 2 -n 7 nice -n 19'

alias mysqldump-hacci='mysqldump --extended_insert --single-transaction --quote-names --flush-logs'
