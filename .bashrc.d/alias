alias ls='ls --color=auto'
alias ll='ls -lAp --color=auto --group-directories-first'
alias lld='ll | grep ^d'
alias lll='ll | grep ^l'
alias llf='ll | grep ^-'
alias llgrep='ll | grep'
alias llless='ll | less'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

alias cd='cdls'
alias cd..='cd ..'

alias vim='vim -p'
alias vi=vim
alias view='vim -R'

alias psgrep='ps aux | grep'

alias reload-bash='source $HOME/.bash_profile'

alias tmux-a='tmux a; if [ $? -eq 1 ]; then tmux -2; fi'

alias mux=tmuxinator

alias eman='env LANG=C man'

alias ag-pager='ag --pager="less -R"'

alias b2d=boot2docker

alias pt='pt -S'
