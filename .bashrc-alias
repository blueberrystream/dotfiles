alias ls='ls --color=auto'
alias ll='ls -lAp --color=auto'
alias lld='ll | grep ^d'
alias lll='ll | grep ^l'
alias llf='ll | grep ^-'
alias llgrep='ll | grep'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

alias cd='cdls'
alias cd..='cd ..'

alias vi=vim
alias view='vim -R'

alias psgrep='ps aux | grep'

alias reload-bash='source $HOME/.bash_profile'

alias tmux-a='tmux a; if [ $? -eq 1 ]; then tmux -2; fi'

alias eman='env LANG=C man'

alias ag-pager='ag --pager="less -R"'

if type peco > /dev/null 2>&1; then
	alias ssh-peco='ssh $(grep -iE "^host[[:space:]]+[^*]" ~/.ssh/config|peco|awk "{print \$2}")'
fi
